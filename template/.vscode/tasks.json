{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label":"utilities: Update Web Content",
            "type": "shell",
            "command": "python3 utils/update-webstore.py"
        },
        {
            "label":"utilities: Update Favicon",
            "type": "shell",
            "command": "python3 utils/update-favicon.py"
        },
        {
            "label":"utilities: Update AppConfig",
            "type": "shell",
            "command": "python3 utils/update-appconfig.py"
        },
        {
            "label": "build: esp8266",
            "type": "shell",
            "command": "make esp8266",
            "dependsOn":["utilities: Update AppConfig","utilities: Update Favicon","utilities: Update Web Content"]
        },
        {
            "label": "print: esp8266 options",
            "type": "shell",
            "command": "arduino-cli board details -b ${config:board_esp8266}"
        },
        {
            "label": "build: esp32",
            "type": "shell",
            "command": "make esp32",
            "dependsOn":["utilities: Update AppConfig","utilities: Update Favicon","utilities: Update Web Content"]
        },
        {
            "label": "print: esp32 options",
            "type": "shell",
            "command": "arduino-cli board details -b ${config:board_esp32}"
        },
        {
            "label": "build: rp2040",
            "type": "shell",
            "command": "make rp2040",
            "dependsOn":["utilities: Update AppConfig","utilities: Update Favicon","utilities: Update Web Content"]
        },
        {
            "label": "build: rp2040 debug",
            "type": "shell",
            "command": "make rp2040_debug",
            "dependsOn":["utilities: Update AppConfig","utilities: Update Favicon","utilities: Update Web Content"]
        },
        {
            "label": "print: rp2040 options",
            "type": "shell",
            "command": "arduino-cli board details -b ${config:board_rp2040}"
        },
        {
            "label": "install: gdb-server (Linux / macOS)",
            "type": "shell",
            "osx":{
                "command":"brew install armmbed/formulae/arm-none-eabi-gcc"
            },
            "linux":{
                "command":"sudo apt update && sudo apt install gcc-arm-none-eabi "
            }
        },
        {
            "label": "install: Enable WSL",
            "type": "shell",
            "windows":{
                "options": {
                    "shell": {
                        "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
                        "args": [
                            "-NoProfile",
                            "-ExecutionPolicy",
                            "Bypass",
                            "-Command"
                        ]
                    }
                },
                "command":"Enable-WindowsOptionalFeature -Online -FeatureName Microsoft-Windows-Subsystem-Linux"
            },
        },
        {
            "label": "install: Install WSL Ubuntu",
            "type": "shell",
            "windows":{
                "command":"wsl --install Ubuntu"
            },
        },
        {
            "label": "install: Python requirements",
            "type": "shell",
            "osx":{
                "command":"brew install armmbed/formulae/arm-none-eabi-gcc"
            },
            "linux":{
                "command":"sudo apt update && sudo apt install gcc-arm-none-eabi "
            }
        },
    ]
}
